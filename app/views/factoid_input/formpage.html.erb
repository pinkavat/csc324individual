<%= content_tag(:div, "Factoid successfully added to #{@factoid.glyph_key} glyph") unless @factoid.errors.any? %>
<%= @factoid.errors.any?%>
<%= if @factoid.errors.any?; puts "ERRORS HAPPENED"; else puts "ERRORS DID NOT HAPPEN"; end%>

<%= form_with(url: factoid_input_formpage_path, method: 'post') do %>
    <%= text_field(:factoid, :glyph_key)%>
    <%= text_field(:factoid, :title)%>
    <%= text_field(:factoid, :content)%>
    <%= submit_tag('Create')%>
<% end %>

<ul>
<% @factoid.errors.full_messages.each do |msg| %>
    <%= content_tag(:li, msg)%>
<% end %>
</ul>

